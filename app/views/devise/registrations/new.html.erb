<div class="user_info">
  <div class="form_body">
    <div class="midashi">Type_PROGRAMMINGをはじめよう</div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="user_error_message">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="field">
        <%= f.label "ユーザー名" %>
        <%= f.text_field :user_name, id:"nickname", placeholder:"", class:"input_form" %>
      </div>

      <div class="field">
        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"", class:"input_form" %>
      </div>

      <div class="field">
        <%= f.label "パスワード (半角英数字6文字以上)" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"", class:"input_form" %>
      </div>

      <div class="field">
        <%= f.label "確認用パスワード" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"", class:"input_form"  %>
      </div>

      <div class="actions">
        <%= f.submit "アカウントを作成", class:"user_submit" %>
      </div>
    <% end %>
  </div>
</div>

